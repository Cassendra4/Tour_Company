<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>servlets.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Tourdisplay</servlet-name>
        <servlet-class>servlets.Tourdisplay</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SelectedTour</servlet-name>
        <servlet-class>servlets.SelectedTour</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>checkAvailability</servlet-name>
        <servlet-class>servlets.checkAvailability</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>customerConfirm</servlet-name>
        <servlet-class>servlets.customerConfirm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Bill</servlet-name>
        <servlet-class>servlets.Bill</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Tourdisplay</servlet-name>
        <url-pattern>/Tourdisplay</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SelectedTour</servlet-name>
        <url-pattern>/SelectedTour</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>checkAvailability</servlet-name>
        <url-pattern>/checkAvailability</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>customerConfirm</servlet-name>
        <url-pattern>/customerConfirm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Bill</servlet-name>
        <url-pattern>/Bill</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/tourCompany</res-ref-name>
        <res-type>javax.sql.ConnectionPoolDataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
